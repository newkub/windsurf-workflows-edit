{
  "name": "windsurf-workflows-edit",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "turbo watch verify",
    "postinstall": "lefthook install",
    "prepare": "lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "deps:update": "taze -r -w",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify",
    "clean": "bunx rimraf */bun.lockb */node_modules"
  },
  "devDependencies": {
    "lefthook": "^2.0.13",
    "taze": "^19.9.2",
    "turbo": "^2.7.2"
  }
}
